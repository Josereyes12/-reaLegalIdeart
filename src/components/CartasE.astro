---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    {MiembrosEquipo.map(({ photo, name, role, email, linkedin, page }) => (
        <div class="bg-white shadow-lg rounded-lg overflow-hidden max-w-sm border border-gray-800 w-full ">
            <a href={page}>
            <img src={photo} alt={`${name}'s photo`} class="w-full h-50 object-cover object-center">
            </a>
            <div class="p-6 card">
                <h2 class="text-center text-3xl font-bold mb-2">{name}</h2>
                <p class="text-center text-2xl text-[#fc2121] font-semibold mb-2">{role}</p>
                <p class="flex justify-center mb-2 text-xl">  
                    <a href={`mailto:${email}`} class="flex items-center modi2">
                        <MailIcon class="size-6 mr-2" /> {email}
                    </a>
                </p>
                <div class="flex justify-center mt-4">
                    <a href={linkedin} target="_blank" rel="noopener noreferrer">
                        <LinkedInIcon class="size-8"/>
                    </a>
                </div>
                <div class="flex justify-center mt-4">
                    <a href={page} class=" text-red-500 px-4 py-2  flex items-center">Ver m√°s <FlechaD class="ml-2"/> </a>
                </div>
            </div>
        </div>
    ))}
</div>

<style>
    @media (max-width: 383px) {
        .modi2{
            font-size: 1.1rem;
        }
