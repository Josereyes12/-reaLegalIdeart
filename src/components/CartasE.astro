const MiembrosEquipo = [
    {
        name: "Dany Reyes",
        role: "Socio Principal",
        email: "darrr1970@gmail.com",
        linkedin: "https://pe.linkedin.com/in/dany-reyes-reyes-641a401a7",
        photo: "/images/MiembrosDelEquipo/Dany2.png",
        page: "/team/Dany"
    },
    {
        name: "Daniel Reyes",
        role: "Socio",
